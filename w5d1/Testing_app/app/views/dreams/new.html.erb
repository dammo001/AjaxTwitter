<h1>Create A Dream</h1>

<form  action="<%= dreams_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

  <label>
    Title
    <input type="text" name="dream[title]" value="<%=@dream.title%>">
  </label>

  <label>
    Body
    <textarea name="dream[body]" rows="8" cols="20"><%= @dream.body %></textarea>
  </label>

  <label for="true">Private</label>
    <input type="radio" name="dream[personal]" value="true" id="true">
  <label for="false">Public</label>
    <input type="radio" name="dream[personal]" value="false" id="false">
  <br><br>
  <input type="submit" value="Submit">

</form>
